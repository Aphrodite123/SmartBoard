<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="custom_base_app_theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="divide_line_short">
        <item name="android:background">@color/color_cacbcc</item>
        <item name="android:layout_width">@dimen/ipen_short_line_bottom_width</item>
        <item name="android:layout_height">1px</item>
    </style>

    <style name="divide_line_of_blue">
        <item name="android:background">@color/color_0392ff</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
    </style>

    <style name="tab_bottom_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="login_button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:minHeight">@dimen/dip40</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dip40</item>
        <item name="android:layout_marginLeft">@dimen/dip19</item>
        <item name="android:layout_marginRight">@dimen/dip19</item>
        <item name="android:textSize">@dimen/font13</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
